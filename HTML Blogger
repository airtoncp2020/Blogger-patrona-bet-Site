  <!-- Script -->
  <script>
    function mostrarPrincipal() {
      document.getElementById("principal").style.display = "block";
      document.getElementById("sobre").style.display = "none";
    }
    function mostrarPlayer() {
      document.getElementById("principal").style.display = "block";
      document.getElementById("sobre").style.display = "none";
      window.location.hash = "player";
    }
    function mostrarSobre() {
      document.getElementById("principal").style.display = "none";
      document.getElementById("sobre").style.display = "block";
    }

    // Simulador de ouvintes online (1601–1699)
    function atualizarOuvintes() {
      var min = 1601;
      var max = 1699;
      var ouvintes = Math.floor(Math.random() * (max - min + 1)) + min;
      var span = document.getElementById("ouvintes");
      if (span) {
        span.textContent = ouvintes;
      }
    }

    document.addEventListener("DOMContentLoaded", function() {
      atualizarOuvintes();
      setInterval(atualizarOuvintes, 10000);
    });
  </script>
